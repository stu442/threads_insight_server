{
    "name": "threads-insight-monorepo",
    "version": "1.0.0",
    "private": true,
    "packageManager": "npm@10.9.2",
    "workspaces": [
        "apps/*"
    ],
    "scripts": {
        "dev": "turbo run dev --parallel",
        "build": "turbo run build",
        "test": "turbo run test",
        "test:backend": "npm -w apps/backend-nest test",
        "test:backend:watch": "npm -w apps/backend-nest run test:watch",
        "lint": "turbo run lint"
    },
    "devDependencies": {
        "turbo": "^2.3.3"
    }
}
